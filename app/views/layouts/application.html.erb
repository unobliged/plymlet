<!DOCTYPE html>
<html>

<head>
  <title>Plymlet | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <% if content_for? :for_head %>
    <%= yield :for_head %>
  <% end %>
</head>

<body>

<%= render 'layouts/header' %>

<div class="container">
<%= yield %>
</div>

<% if user_signed_in? %>
  <%= render 'layouts/footer' %>
<% end %>

</body>
</html>
